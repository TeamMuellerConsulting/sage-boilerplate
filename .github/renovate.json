{
  "baseBranches": [
    "main"
  ],
  "commitMessageAction": "⬆️ Bump",
  "commitMessageTopic": "{{depName}}",
  "extends": [
    "config:recommended",
    "schedule:weekly"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin"
      ],
      "enabled": true
    }
  ],
  "timezone": "America/Detroit"
}
